<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="jpa"
		transaction-type="RESOURCE_LOCAL">
		<!-- provider =>implementation de jpa -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- proprietes de l'unite de persistence -->
		<properties>
			<!-- driver jdbc -->
			<property name="hibernate.connection.driver"
				value="org.postgresql.Driver" />
			<!-- url -->
			<property name="hibernate.connection.url"
				value="jdbc:postgresql://127.0.0.1:5432/jpa" />
			<!-- login -->
			<property name="hibernate.connection.user" value="postgres" />
			<!-- password -->
			<property name="hibernate.connection.password"
				value="postgres" />
			<!-- dialect -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL95Dialect" />
			<!-- controle correspondance entre entity et tables de la base -->
			<!-- validate => verification si KO erreur et persistence-unit ne peut 
				pas se creer -->
			<!-- create => on drop les tables qui correspondent au entity du code 
				au lancement et on cree les tables -->
			<!-- create-drop -->
			<!-- update => ajout de colonnes manquantes dans les tables -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>